@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Login - Welcome to VNS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link type="text/css" rel="stylesheet" href="~/assets/login_assets/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/assets/login_assets/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/assets/login_assets/fonts/flaticon/font/flaticon.css">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" >
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPoppins:400,500,700,800,900%7CRoboto:100,300,400,400i,500,700">
    <link type="text/css" rel="stylesheet" href="~/assets/login_assets/css/style.css">
    <link rel="stylesheet" type="text/css" id="style_sheet" href="~/assets/login_assets/css/skins/default.css">

</head>
<body id="top">
<div class="login-20">
    <div class="container-fluid">
        <div class="row">
       
            @* <div class="col-xl-7 col-lg-7 col-md-12 bg-img none-992">
                <div class="info">
                    <h1>Welcome To  Myron Grab</h1>
                </div>
            </div> *@
            <div class="col-xl-7 col-lg-7 col-md-12  none-992">
                <div class="info">
                    <img src="~/assets/login_assets/img/login.png" alt="logo"  style="width: 100%;" />
                </div>
            </div>
                 <div class="col-xl-5 col-lg-5 col-md-12 bg-color-10">
                <div class="form-section">
                    <div class="logo clearfix">
                        <a href="#">
                            <img src="~/assets/login_assets/img/eshalogo.png" alt="logo">
                        </a>
                    </div>
                    <h3>Sign into your account</h3>
                    <ul class="social-list">
                        <li><a href="#" target="_blank" class="facebook-color"><i class="fa fa-facebook facebook-i"></i><span>Facebook</span></a></li>
                        <li><a href="#" target="_blank" class="twitter-color"><i class="fa fa-twitter twitter-i"></i><span>Twitter</span></a></li>
                        <li><a href="#" target="_blank" class="google-color"><i class="fa fa-google google-i"></i><span>Google</span></a></li>
                    </ul>
                    <div class="extra-login clearfix">
                        <span>Or</span>
                    </div>
                    <div class="login-inner-form">
                        <form id="account" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group form-box">
                                <input asp-for="Input.Username" class="input-text" placeholder="Email Address / Username">
                                <i class="flaticon-mail-2"></i>                                    
                            </div>
                            <div class="form-group form-box">
                                <input asp-for="Input.Password" class="input-text" placeholder="Password">
                                <i class="flaticon-mail-2"></i>
                            </div>
                            <div class="checkbox clearfix">
                                <div class="form-check checkbox-theme">
                                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" value="true" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Remember me
                                    </label>
                                </div>
                                @*<a href="./ForgotPassword">Forgot Password</a>*@
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn-md btn-theme btn-block">Login</button>
                            </div>
                        </form>
                    </div>
                    <!--<p>Don't have an account? <a href="register-20.html" class="thembo"> Register here</a></p>-->
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/login_assets/js/jquery-2.2.0.min.js"></script>
<script src="~/assets/login_assets/js/popper.min.js"></script>
<script src="~/assets/login_assets/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
