@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/assets/fonts/icomoon/style.css">

    <link href='~/assets/fullcalendar/packages/core/main.css' rel='stylesheet' />
    <link href='~/assets/fullcalendar/packages/daygrid/main.css' rel='stylesheet' />


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/assets/css/style.css">

    <title>Welcome to VNS Store</title>
    <style>
        .fc-more {
            background-color: #f67280;
            color: white;
            font-size: 25px !important;
        }

        .fc-event-success {
            position: relative;
            display: block;
            font-size: 0.85em;
            line-height: 1.4;
            border-radius: 3px;
            border: 1px solid #3e9a0b;
        }

        .fc-event-success, .fc-event-dot-success {
            background-color: #1fc510;
        }
    </style>
</head>
<body>


    <div id='calendar-container'>
        <div id='calendar'></div>
        <a asp-action="Index" asp-controller="ProductEvent" style="position:fixed;bottom:10%;right:8%;border-radius:50%;z-index:99999;font-size: 2em;font-weight:bold;" class="fc-today-button fc-button fc-button-primary">+</a>
    </div>

    <script src="~/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <script src='~/assets/fullcalendar/packages/core/main.js'></script>
    <script src='~/assets/fullcalendar/packages/interaction/main.js'></script>
    <script src='~/assets/fullcalendar/packages/daygrid/main.js'></script>
    <script src='~/assets/fullcalendar/packages/timegrid/main.js'></script>
    <script src='~/assets/fullcalendar/packages/list/main.js'></script>

    <script type="text/javascript" charset="utf8">
        var eventData;
        (function () {
            $.ajax({
                url:'@(Url.Action("OutRecords", "Home"))',
                type: "POST",
                cache: false,
                async: false,
                //data: { search: $("#search").val() },
                success: function (data) {
                    //var items = jQuery.parseJSON(data);
                    if (data != null || data != "") {
                        eventData = data;
                    }
                }
            });
        })();

        $(document).ready(function () {
            $("#fc-left").append('<button type="button" class="fc-today-button fc-button fc-button-primary">today</button>');
        });

        var todayDate = new Date();
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['interaction', 'dayGrid', 'timeGrid', 'list'],
                height: 'parent',
                header: {
                    buttons: 'newBtn',
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                },
                defaultView: 'dayGridMonth',
                defaultDate: todayDate, //'2020-02-12',
                navLinks: true, // can click day/week names to navigate views
                editable: true,
                eventLimit: true, // allow "more" link when too many events
                events: eventData
                //events: [
                //    {
                //        title: 'Repeating Event',
                //        start: '2021-05-01',
                //        url: 'http://google.com?date=2021-05-05'
                //    },
                //    {
                //        title: 'Repeating Event',
                //        start: '2021-05-01',
                //        url: 'http://google.com?date=2021-05-05'
                //    },
                //    {
                //        title: 'All Day Event',
                //        start: '2021-05-18',
                //        url: 'http://google.com?date=2021-05-05'
                //    }
                //]
            });

            calendar.render();
        });

    </script>

    <script src="~/assets/js/main.js"></script>
</body>
</html>


